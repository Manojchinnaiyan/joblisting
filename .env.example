# Application
APP_ENV=development
APP_PORT=8080
APP_HOST=0.0.0.0

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_NAME=jobdb
DB_SSLMODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Meilisearch
MEILI_HOST=http://meilisearch:7700
MEILI_MASTER_KEY=your-meili-master-key

# MinIO
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=resumes
MINIO_BUCKET_RESUMES=resumes
MINIO_BUCKET_AVATARS=avatars
MINIO_BUCKET_CERTIFICATES=certificates
MINIO_BUCKET_PORTFOLIOS=portfolios

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-random-64-chars
JWT_ACCESS_EXPIRY=24h
JWT_REFRESH_EXPIRY=720h
JWT_ADMIN_EXPIRY=8h

# Password
BCRYPT_COST=12
PASSWORD_MIN_LENGTH=8

# Security
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION=15m
EMAIL_VERIFICATION_EXPIRY=24h
PASSWORD_RESET_EXPIRY=1h

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:8080/api/v1/auth/google/callback

# Email Provider Selection (SMTP or RESEND)
EMAIL_PROVIDER=RESEND

# Resend Configuration (recommended)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=onboarding@resend.dev
RESEND_FROM_NAME=JobsWorld

# SMTP Configuration (legacy - for Gmail/Outlook)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@jobsworld.in

# Admin
ADMIN_EMAIL_DOMAIN=@admin.jobsworld.in
SUPER_ADMIN_EMAIL=superadmin@admin.jobsworld.in

# Frontend URLs
FRONTEND_URL=http://localhost:3000
ADMIN_FRONTEND_URL=http://localhost:3001
EMAIL_VERIFICATION_URL=http://localhost:3000/verify-email
PASSWORD_RESET_URL=http://localhost:3000/reset-password
